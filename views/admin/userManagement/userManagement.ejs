<%- include('../../layout/admin/header') %>
    <%- include('../../layout/admin/generalManagement') %>


        <% if (users.length) { %>
            <div class="container-fluid">
                <table class="table table-dark table-hover  box">
                    <thead>
                        <tr>
                            <th scope="col">Number</th>
                            <th scope="col">Name</th>
                            <th scope="col">Email</th>
                            <th scope="col">Phone</th>
                            <th scope="col">Verified</th>
                            <th scope="col">Status</th>
                            <th scope="col">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% let count=1 %>
                            <% for (let user of users) { %>
                                <tr>
                                    <td>
                                        <%= count %>
                                    </td>
                                    <td>
                                        <%= user.firstName + " " + user.lastName %>
                                    </td>
                                    <td>
                                        <%= user.email %>
                                    </td>
                                    <td>
                                        <%= user.phone %>
                                    </td>

                                    <td>
                                        <%= user.isVerified %>
                                    </td>
                                    <td>
                                        <% if (user.status) { %>
                                            Active
                                            <% } else { %>
                                                Blocked
                                                <% } %>
                                    </td>
                                    <td>
                                        <div class="d-flex gap-1 ">
                                            <form action="/digiWorld/admin/userManagement/editRequest" method="post">
                                                <input type="hidden" name="id" value="<%= user._id %>">
                                                <button class="btn btn-outline-warning " type="submit">Edit</button>
                                            </form>

                                            <form action="/digiWorld/admin/userManagement/deleteRequest" method="post">
                                                <input type="hidden" name="id" value="<%= user._id %>">
                                                <button class="btn btn-outline-danger" type="submit">Delete</button>
                                            </form>
                                        </div>

                                    </td>
                                </tr>
                                <% count++ %>
                                    <% } %>
                    </tbody>
                </table>
            </div>
            <% } %>

                <%- include('../../layout/admin/footer') %>