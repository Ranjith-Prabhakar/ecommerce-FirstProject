                                                                <div class="d-flex">
                                                                    <div class="one mt-3 ">

                                                                        <input type="hidden" name="id"
                                                                            value="<%=product._id %>">
                                                                        <label for="" class="text-black ">Product
                                                                            Name</label>
                                                                        <input class="form-control w-75 " type="text"
                                                                            name="productName"
                                                                            value="<%=product.productName%>"
                                                                            placeholder="<%=product.productName%>"
                                                                            id="productName">
                                                                        <label for="" class="text-black ">Quantity
                                                                        </label>
                                                                        <input class="form-control w-75 " type="text"
                                                                            name="quantity"
                                                                            value="<%=product.quantity %>"
                                                                            placeholder="<%=product.quantity %>"
                                                                            id="quantity">
                                                                        <label for="" class="text-black ">Unit
                                                                            price</label>
                                                                        <input class="form-control w-75 " type="text"
                                                                            name="unitPrice"
                                                                            value="<%=product.unitPrice %>"
                                                                            placeholder="<%=product.unitPrice %>">

                                                                        <!-- -->

