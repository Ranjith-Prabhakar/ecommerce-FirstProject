<%- include('../layout/user/header') %>

    <div class="">
        <% locals.singleProduct || "" %>
            <% locals.productList || "" %>
                <% locals.user || "" %>

                    <% if(locals.singleProduct) {%>
                        <div class="">
                            <img src="/productImages/<%=singleProduct.gallery[0] %>" alt="product-Image" srcset="">
                            <h1>
                                <%=singleProduct.productName %>
                            </h1>
                            <h4 id="singleProductUnitPrice">
                                <%=singleProduct.unitPrice %>
                            </h4>
                            <button id="increament">add</button>
                            <button name="orderQuantity" data-product-price="<%=locals.singleProduct.unitPrice%>"
                                data-productId="<%=locals.singleProduct._id %>"
                                data-stock-availability="<%=locals.singleProduct.quantity %>">1</button>
                            <button id="decreament">reduce</button>

                        </div>

                        <%} else if(locals.productList.length) {%>
                            <% for(let i=0;i<locals.productList.length;i++){ %>
                                <div class="">
                                    <img src="/productImages/<%=productList[i].gallery[0] %>" alt="product-Image"
                                        srcset="">
                                    <h1>
                                        <%=productList[i].productName %>
                                    </h1>
                                    <h4>
                                        <%=productList[i].unitPrice %>
                                    </h4>
                                    <h4>
                                        <%=productList[i].orderQuantity %>
                                    </h4>

                                </div>
                                <% } %>
                                    <% } %>


    </div>
    <% if(locals.user.shippingAddress.length) {%>


        <% for(let i=0;i<=locals.user.shippingAddress.length-1;i++) {%>
            <div class="container ">
                <div class="row">


                    <div>
                        <h2>address<%=i+1 %>
                        </h2>
                        <div>
                            <button class="addressEdit">Edit</button>
                            <button class="addressDelete"
                                data-objectId="<%=locals.user.shippingAddress[i]._id  %>">Delete</button>
                        </div>
                    </div>
                    <form action="" name="addressList<%=i %>">

                        <button class="updateAddress d-none" readonly="true" type="submit">Update</button>

                        <input type="hidden" name="userId" value="<%locals.user._id%>">
                        <input type="hidden" name="addressId"
                            value="<%=locals.user.shippingAddress[i]._id  %>">


                        <input  type="radio" name="selectAddress" value="<%= i %>" id="<%= i %>">
                        <label for="">Country</label>
                        <input class="form-control" name="country" readonly="true" type="text"
                            value="<%=locals.user.shippingAddress[i].country %>"
                            data-original-value="<%=locals.user.shippingAddress[i].country %>">
                        <label for="">State</label>
                        <input class="form-control" name="state" readonly="true" type="text"
                            value="<%=locals.user.shippingAddress[i].state %>"
                            data-original-value="<%=locals.user.shippingAddress[i].state %>">
                        <label for="">District</label>
                        <input class="form-control" name="district" readonly="true" type="text"
                            value="<%=locals.user.shippingAddress[i].district %>"
                            data-original-value="<%=locals.user.shippingAddress[i].district %>">
                        <label readonly="true" for="">City</label>
                        <input class="form-control" name="city" readonly="true" type="text"
                            value="<%=locals.user.shippingAddress[i].city %>"
                            data-original-value="<%=locals.user.shippingAddress[i].city %>">
                        <label readonly="true" for="">Pincode</label>
                        <input class="form-control" name="pincode" readonly="true" type="text"
                            value="<%=locals.user.shippingAddress[i].pincode %>"
                            data-original-value="<%=locals.user.shippingAddress[i].pincode %>">
                        <label for="">Street</label>
                        <input class="form-control" name="street" readonly="true" type="text"
                            value="<%=locals.user.shippingAddress[i].street %>"
                            data-original-value="<%=locals.user.shippingAddress[i].street %>">
                        <label for="">House Name</label>
                        <input class="form-control" name="houseName" readonly="true" type="text"
                            value="<%=locals.user.shippingAddress[i].houseName %>"
                            data-original-value="<%=locals.user.shippingAddress[i].houseName %>">
                        <label for="">Building No</label>
                        <input class="form-control" name="buildingNo" readonly="true" type="text"
                            value="<%=locals.user.shippingAddress[i].buildingNo %>"
                            data-original-value="<%=locals.user.shippingAddress[i].buildingNo %>">
                        <label for="">Land Mark</label>
                        <input class="form-control" name="landMark" readonly="true" type="text"
                            value="<%=locals.user.shippingAddress[i].landMark %>"
                            data-original-value="<%=locals.user.shippingAddress[i].landMark %>">


                    </form>
                </div>
            </div>

            <% } %>
                <% } %>
                    <br><br>
                    <!-- create new address -->
                    <div class="createNewAddress">
                        <form action="" name="createAddress">
                            <div id="formData" class=" d-none ">
                                <label for="country">Country <input name="country" id="country" type="text"></label>
                                <label for="state"> State <input name="state" id="state" type="text"></label>
                                <label for="district">District<input name="district" id="district" type="text"></label>
                                <label for="city"> City <input name="city" id="city" type="text"></label>
                                <label for="pincode"> Pincode <input name="pincode" id="pincode" type="text"></label>
                                <label for="street"> Street <input name="street" id="street" type="text"></label>
                                <label for="houseName">House Name<input name="houseName" id="houseName"
                                        type="text"></label>
                                <label for="buildingNo">Building No<input name="buildingNo" id="buildingNo"
                                        type="text"></label>
                                <label for="landMark"> Land Mark<input name="landMark" id="landMark"
                                        type="text"></label>
                            </div>
                            <button id="createNewAddress" value="Create New Address">Create New Address</button>
                            <input id="create" class="d-none " type="submit" name="" value="Create">
                        </form>
                    </div>
                    <br><br>
                    <!-- payment section -->
                    <div class="payment-method">
                        <form action="" name="paymentOption">
                            <input type="radio" id="cashOnDelivery" name="paymentMethod"><label
                                for="cashOnDelivery">cash on delivery</label><br>
                            <input type="radio" id="onlinePayment" name="paymentMethod"><label
                                for="onlinePayment">UPI</label><br>
                            <input type="submit" value="Place Order">
                        </form>
                    </div>
                    <script src="/javaScript/user/checkout.js"></script>
                    <%- include('../layout/user/footer') %>