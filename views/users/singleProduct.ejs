<%- include('../layout/user/header') %>
    <!-- products-->
    <% locals.product || "" %>
        <% if(locals.product) {%>
            <div class="container">
                <div class="row align-items-center mt-5 text-white ">
                    <!-- product gallery -->
                    <div class="col-2 d-flex flex-column gap-1  ">
                        <% locals.product.gallery.forEach(image=>{%>
                            <img id="<%=image%>" class="rounded-1 gallery-img-size" src="/productImages/<%=image%>" alt="phone"
                            srcset="">
                        <%}) %>
                       
                    </div>
                    <!-- product image -->
                    <div class="col-3 ">
                        <img id="mainImage" class="rounded-1" src="/productImages/<%=product.gallery[0]%>" alt="phone" srcset="">
                    </div>
                    <!-- product data -->
                    <div class="col-5">
                        <h3>
                            <%=product.productName %>
                        </h3>
                        <h5><span>
                                <%=product.specification.ram%>
                            </span> | <span>
                                <%=product.specification.internalStorage%>
                            </span> | <span>expandable upto
                                1
                                tb</span>
                        </h5>
                        <h4>display</h4>
                        <h5><span>
                                <%=product.specification.frontCamera%>
                            </span> | <span>
                                <%=product.specification.backCamera%> front camera
                            </span> </h5>
                        <h5>
                            <%=product.specification.battery%> Lithium iron battery
                        </h5>
                        <h5>
                            <%=product.specification.processor%>
                        </h5>

                        <% if(product.quantity < 10 && product.quantity> 0) {%>
                            <h5>instock : <span class="text-warning ">Left Only
                                    <%=product.quantity %>
                                </span> </h5>
                            <% } else if(product.quantity < 1){%>
                                <h5 class="text-danger ">out of stock </h5>
                                <% } else{ %>
                                    <h5 class="text-success  ">instock </h5>
                                    <% } %>
                    </div>
                    <!-- product price -->
                    <div class="col-1">
                        <h5 class="text-success ">
                            <%= Intl.NumberFormat('en-IN', { style: 'currency' , currency: 'INR' ,
                                minimumFractionDigits: 0 }).format(product.unitPrice) %>

                        </h5>
                    </div>

                    <hr class="mt-5 ">


                </div>
                <% } %>



<script src="/javaScript/user/singleProduct.js"></script>
<%- include('../layout/user/footer') %>