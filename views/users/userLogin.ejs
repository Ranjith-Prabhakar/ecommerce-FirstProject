<%- include('../layout/user/header') %>
    <div class="container">
        <div class="d-flex justify-content-end align-items-center ">
            <div>
                <form action="/digiWorld/user/userLogin" method="post">
                    <% locals.userSignUpSuccess || '' %>
                        <% locals.loginErrorMessage || '' %>
                            <% locals.block || '' %>

                                <% if(locals.userSignUpSuccess) {%>
                                    <h3>
                                        <%= userSignUpSuccess %>
                                    </h3>
                                    <% } else if(locals.loginErrorMessage) {%>
                                        <h3>
                                            <%= loginErrorMessage %>
                                        </h3>
                                        <% } else if(locals.block) {%>
                                            <h3>
                                                <%= block %>
                                            </h3>
                                            <% } %>
                                                <input type="text" name="userName" placeholder="userName"><br><br>
                                                <input type="password" name="password" placeholder="password"><br><br>
                                                <input type="submit" value="submit">
                </form>
                <a href="/digiworld/user/userSignUp">Don`t have an Account</a>
            </div>
        </div>
    </div>

    <%- include('../layout/user/footer') %>